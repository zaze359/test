<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_app_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4"
            tools:text="111" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_app_iv"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_72"
                android:contentDescription="@null"
                tools:src="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/item_app_export_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_4"
                android:text="导出apk"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_app_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_4"
                android:textSize="16sp"
                tools:text="测试应用" />

            <TextView
                android:id="@+id/item_app_version_code_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_4"
                android:textSize="16sp"
                tools:text="122" />

            <TextView
                android:id="@+id/item_app_version_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_4"
                android:textSize="16sp"
                tools:text="v1.0.1" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_app_package_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        android:textSize="16sp"
        tools:text="com.zaze.demo" />

    <TextView
        android:id="@+id/item_app_sign_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        android:textSize="16sp"
        tools:text="adsfasdfasdf" />

    <TextView
        android:id="@+id/item_app_dir_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        android:textSize="16sp"
        tools:text="/system/app/cacacd" />

    <TextView
        android:id="@+id/item_app_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        android:textSize="16sp"
        tools:text="2020-02-02/2020-03-03" />

    <include layout="@layout/layout_split_line" />

</LinearLayout>