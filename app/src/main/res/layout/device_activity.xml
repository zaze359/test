<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/device_mac_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="mac 地址" />

        <TextView
            android:id="@+id/device_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="屏幕分辨率" />

        <TextView
            android:id="@+id/device_density"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="屏幕像素密度" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/device_calculate_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算dpi" />

            <TextView
                android:id="@+id/device_dpi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_4" />

            <EditText
                android:id="@+id/device_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="英寸"
                android:inputType="" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/device_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>