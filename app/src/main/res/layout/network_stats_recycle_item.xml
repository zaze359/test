<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_network_stats_app_iv"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_network_stats_app_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_4"
                tools:text="测试应用" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_network_stats_app_package_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        tools:text="com.zaze.demo" />

    <TextView
        android:id="@+id/item_network_stats_send_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        tools:text="com.zaze.demo" />

    <TextView
        android:id="@+id/item_network_stats_receiver_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        tools:text="com.zaze.demo" />

    <include layout="@layout/layout_split_line" />

</LinearLayout>