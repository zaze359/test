<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/state_toolbar"
            style="@style/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/state_info_tv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="default"
            app:layout_constraintTop_toBottomOf="@id/state_toolbar" />

        <EditText
            android:id="@+id/state_input_et"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="input"
            app:layout_constraintTop_toBottomOf="@id/state_info_tv" />

        <Button
            android:id="@+id/state_save_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="restore state"
            app:layout_constraintTop_toBottomOf="@id/state_input_et" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>