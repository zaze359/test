<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/task_push_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加任务" />

    <Button
        android:id="@+id/task_execute_sync_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同步执行" />

    <Button
        android:id="@+id/task_execute_async_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="异步执行" />

    <Button
        android:id="@+id/task_auto_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动执行任务" />

    <Button
        android:id="@+id/task_multi_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多任务执行" />
</LinearLayout>
