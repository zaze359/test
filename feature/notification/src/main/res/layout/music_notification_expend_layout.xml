<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_selector"
    tools:background="@color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/music_notification_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxWidth="100dp"
            android:maxLines="1"
            android:textColor="#5b5b5b"
            android:textSize="14sp"
            tools:text="name" />

        <TextView
            android:id="@+id/music_notification_artist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxWidth="100dp"
            android:maxLines="1"
            android:textColor="#5b5b5b"
            android:textSize="12sp"
            tools:text="artist" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical|start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/music_notification_play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:contentDescription="@null"
                android:src="@drawable/music_play_circle_outline_black_24dp" />

            <ImageView
                android:id="@+id/music_notification_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:contentDescription="@null"
                android:src="@drawable/music_skip_next_black_24dp" />

            <ImageView
                android:id="@+id/music_notification_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:contentDescription="@null"
                android:src="@drawable/music_close_gray_24dp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/music_notification_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />
</LinearLayout>