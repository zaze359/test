<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/drawable_first_iv"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintVertical_chainStyle="spread"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        tools:src="@drawable/jljt"
        app:layout_constraintBottom_toTopOf="@+id/drawable_second_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/drawable_second_iv"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        tools:src="@drawable/jljt"
        app:layout_constraintBottom_toTopOf="@+id/drawable_third_iv"
        app:layout_constraintTop_toBottomOf="@id/drawable_first_iv" />

    <ImageView
        android:id="@+id/drawable_third_iv"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        tools:src="@drawable/jljt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/drawable_fourth_iv"
        app:layout_constraintTop_toBottomOf="@id/drawable_second_iv" />


    <ImageView
        android:id="@+id/drawable_fourth_iv"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        tools:src="@drawable/jljt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/drawable_third_iv"
        app:layout_constraintTop_toBottomOf="@id/drawable_second_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>