<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApp" parent="Theme.Custom.MD3" />

    <style name="Theme.MyApp.MD3" parent="Theme.Custom.MD3" />

    <style name="Theme.MyApp.Black" parent="Theme.Custom.MD3.Black" />

    <style name="Theme.MyApp.Light" parent="Theme.Custom.Base.Light" />

    <style name="Theme.MyApp.Dark" parent="Theme.Custom.Base.Dark" />

    <style name="Theme.MyApp.Adaptive" parent="Theme.Custom.Base.Adaptive" />

    <style name="Toolbar" parent="Toolbar.Base" />

    <style name="Material.Text.Body" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>

    <style name="MyLineActionButton" parent="@style/MyButton">
        <item name="android:background">#FFFFFF</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="MyButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAppearance">@style/TextAppearanceNormal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <!--        <item name="android:background">@null</item>-->
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
    </style>


    <style name="LoadingDialog" parent="@style/MyDialog">
        <item name="android:textSize">18sp</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowMinWidthMajor">40%</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="BaseItemStyle">
        <item name="android:background">?attr/zItemBackground</item>
        <item name="android:textColor">?attr/zItemTextColor</item>
        <item name="android:textSize">?attr/zItemTextSize</item>
        <item name="android:padding">@dimen/dp_4</item>
    </style>


    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!--..-->
    <style name="BlueTheme" parent="CustomTheme">
        <item name="zMainBackground">@color/white</item>
        <item name="zMainTextColor">@color/black</item>
        <item name="zMainTextSize">18sp</item>
        <!-- -->
        <item name="zHeadBackground">@color/blue</item>
        <item name="zHeadTextColor">@color/white</item>
        <item name="zHeadTextSize">@dimen/sp_22</item>
        <!-- -->
        <item name="zTabBackground">@color/blue</item>
        <item name="zTabIndicatorBackground">@color/transparent</item>
        <item name="zTabTextColor">@color/white</item>
        <item name="zTabTextSize">@dimen/sp_16</item>
        <!-- -->
        <item name="zItemBackground">@color/blue</item>
        <item name="zItemTextColor">@color/white</item>
        <item name="zItemTextSize">@dimen/sp_20</item>
    </style>

    <style name="BlackTheme" parent="CustomTheme">
        <item name="imageTint">@color/black</item>
        <item name="backgroundTint">@color/yellow</item>

        <item name="zMainBackground">@color/black</item>
        <item name="zMainTextColor">@color/white</item>
        <item name="zMainTextSize">@dimen/sp_18</item>
        <!-- -->
        <item name="zHeadBackground">@color/black</item>
        <item name="zHeadTextColor">@color/white</item>
        <item name="zHeadTextSize">@dimen/sp_22</item>
        <!-- -->
        <item name="zTabBackground">@color/black</item>
        <item name="zTabIndicatorBackground">@color/transparent</item>
        <item name="zTabTextColor">@color/white</item>
        <item name="zTabTextSize">@dimen/sp_16</item>
        <!-- -->
        <item name="zItemBackground">@color/black</item>
        <item name="zItemTextColor">@color/white</item>
        <item name="zItemTextSize">@dimen/sp_20</item>
    </style>

</resources>